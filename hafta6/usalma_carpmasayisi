#include <iostream>

using namespace std;

int power(int a, int b){
    int x=1;
    int sayac=0;
    while(b){
        if(b%2==0){
            a=a*a;
            b=b/2;
        }else{
            x=x*a;
            b--;
        }
        sayac++;
    }
    cout << "toplam carpma sayisi=" << sayac << endl;
    return x;
}

int main()
{
    int a,b;
    cout << "a=";
    cin >> a;
    cout << "b=";
    cin >> b;
    cout << "sonuc=" << power(a,b);
    return 0;
}
